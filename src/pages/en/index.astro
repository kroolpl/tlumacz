---
import Layout from '../../layouts/Layout.astro';
import QuoteForm from '../../components/QuoteForm';
import { ui } from '../../i18n/ui';
import '../../styles/animations.css';

const t = ui['en'];

// Add metadata
const title = "Sworn Translator Katowice | Certified English Translation Services";
const description = "Professional sworn translation services in Katowice. Certified English translator offering quick turnaround and competitive rates. ✓ 24h quote ✓ Quality guarantee";
const keywords = "sworn translator Katowice, certified translator, English translation services Katowice, certified translations, sworn translations Poland";
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
  lang="en"
>
  <div class="relative overflow-hidden">
    <!-- Hero Section -->
    <div class="relative min-h-screen flex items-center">
      <!-- Background Elements -->
      <div class="absolute inset-0 overflow-hidden">
        <!-- Gradient Background -->
        <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-white"></div>
        
        <!-- Animated Shapes -->
        <div class="absolute inset-0">
          <!-- Gradient Orbs -->
          <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-gradient-conic from-primary/10 via-secondary/10 to-accent/10 rounded-full mix-blend-multiply filter blur-3xl animate-float"></div>
          <div class="absolute bottom-1/4 right-1/4 w-[600px] h-[600px] bg-gradient-conic from-accent-2/10 via-accent-3/10 to-accent-4/10 rounded-full mix-blend-multiply filter blur-3xl animate-float-delayed"></div>
          
          <!-- Grid Pattern -->
          <div class="absolute inset-0 bg-[linear-gradient(to_right,#6366F1/2_1px,transparent_1px),linear-gradient(to_bottom,#6366F1/2_1px,transparent_1px)] bg-[size:5rem_5rem] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_-20%,#000_70%,transparent_110%)]"></div>
        </div>
      </div>

      <!-- Content Container -->
      <div class="relative w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Left Column: Main Content -->
          <div class="relative z-10 animation-fade-up animate">
            <!-- Badge -->
            <div class="inline-flex items-center mb-6 px-3 py-1 rounded-full bg-gradient-to-r from-primary/10 to-secondary/10 border border-primary/20 animate-pulse-soft">
              <span class="text-sm font-medium bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">
                Certified Sworn Translator
              </span>
            </div>

            <!-- Main Heading -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold leading-tight mb-6">
              <span class="animate-gradient-text bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
                {t['hero.title']}
              </span>
            </h1>

            <!-- Subtitle -->
            <p class="text-xl text-gray-600 mb-8 max-w-xl">
              {t['hero.subtitle']}
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 mb-12">
              <a 
                href="#quote" 
                class="group relative inline-flex items-center justify-center px-8 py-3 bg-primary text-white rounded-xl font-semibold overflow-hidden animate-button-breath"
              >
                {/* Gradient overlay */}
                <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-primary via-secondary to-accent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out"></span>
                
                {/* Pulsing ring */}
                <span class="absolute inset-0 -m-1 bg-white/20 rounded-xl animate-button-pulse"></span>
                
                {/* Button content */}
                <span class="relative flex items-center gap-2 z-10">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {t['services.get_quote']}
                  <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </span>
              </a>
              
              <a 
                href="/en/services" 
                class="group px-8 py-3 bg-white text-primary border-2 border-primary/10 rounded-xl font-semibold hover:bg-primary/5 transition-all hover:border-primary/30 flex items-center justify-center gap-2"
              >
                {t['nav.services']}
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
            </div>

            <!-- Trust Indicators -->
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-white/50 backdrop-blur-sm p-4 rounded-2xl border border-primary/10 hover:shadow-lg transition-all group">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 bg-gradient-to-br from-accent-2/10 to-accent-3/10 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg class="w-6 h-6 text-accent-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-2xl font-bold text-gray-900">24h</p>
                    <p class="text-sm text-gray-600">turnaround time</p>
                  </div>
                </div>
              </div>

              <div class="bg-white/50 backdrop-blur-sm p-4 rounded-2xl border border-primary/10 hover:shadow-lg transition-all group">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 bg-gradient-to-br from-accent-4/10 to-accent-5/10 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg class="w-6 h-6 text-accent-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-2xl font-bold text-gray-900">100%</p>
                    <p class="text-sm text-gray-600">quality guarantee</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column: Interactive Elements -->
          <div class="relative lg:block">
            <!-- 3D Floating Cards -->
            <div class="relative w-full aspect-square">
              <!-- Main Card -->
              <div class="absolute top-0 right-0 w-4/5 aspect-[4/3] bg-white rounded-2xl shadow-2xl p-6 transform rotate-3 hover:rotate-0 transition-transform duration-500">
                <div class="relative h-full border-2 border-dashed border-primary/20 rounded-xl p-4 flex items-center justify-center overflow-hidden">
                  <img 
                    src="/images/birt.webp" 
                    alt="Birth Certificate Translation" 
                    class="w-full h-full object-cover rounded-lg transform group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
              </div>

              <!-- Secondary Card -->
              <div class="absolute bottom-0 left-0 w-4/5 aspect-[4/3] bg-white rounded-2xl shadow-2xl p-6 transform -rotate-6 hover:rotate-0 transition-transform duration-500">
                <div class="relative h-full border-2 border-dashed border-accent-2/20 rounded-xl p-4 flex items-center justify-center overflow-hidden">
                  <img 
                    src="/images/birt2.webp" 
                    alt="Birth Certificate Translation Example" 
                    class="w-full h-full object-cover rounded-lg transform group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
              </div>

              <!-- Decorative Elements -->
              <div class="absolute inset-0 pointer-events-none">
                <div class="absolute top-1/4 right-1/4 w-20 h-20 bg-gradient-candy from-primary/20 to-secondary/20 rounded-full mix-blend-multiply filter blur-xl animate-float"></div>
                <div class="absolute bottom-1/4 left-1/4 w-32 h-32 bg-gradient-ocean from-accent-2/20 to-accent-3/20 rounded-full mix-blend-multiply filter blur-xl animate-float-delayed"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Timeline Section -->
    <div class="py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-title-1 md:text-display-3 font-heading text-center mb-16 bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary tracking-tight">
          How It Works
        </h2>
        
        <div class="relative">
          <!-- Connecting lines -->
          <div class="hidden lg:block absolute top-1/2 left-0 w-full h-1 -translate-y-1/2">
            <div class="absolute inset-0 bg-gradient-to-r from-primary/20 via-secondary/20 to-accent/20"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent shimmer-overlay"></div>
          </div>
          
          <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
            {/* Step 1: Upload Document */}
            <a 
              href="#quote" 
              class="workflow-item group cursor-pointer"
              onclick="document.getElementById('quote').scrollIntoView({behavior: 'smooth'})"
            >
              <div class="relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-500 border border-primary/10">
                <!-- Gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-br from-primary/[0.02] to-secondary/[0.02] rounded-2xl"></div>
                
                <!-- Step number -->
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center text-white font-bold text-lg shadow-lg transform group-hover:scale-110 transition-transform">
                  1
                </div>

                <!-- Icon -->
                <div class="mb-6 transform group-hover:scale-110 transition-transform">
                  <div class="w-16 h-16 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary animate-icon-breath" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                    </svg>
                  </div>
                </div>

                <!-- Content -->
                <h3 class="text-title-2 font-heading mb-4 group-hover:text-primary transition-colors">
                  Upload Document
                </h3>
                <p class="text-body-large text-gray-600">
                  Upload your documents for translation
                </p>

                <!-- Arrow indicator -->
                <div class="mt-6 flex items-center gap-2 text-primary/60 group-hover:text-primary transition-colors">
                  <span class="text-sm font-medium">Start now</span>
                  <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </div>
              </div>
            </a>

            {/* Step 2: Receive Quotation */}
            <div class="workflow-item">
              <div class="relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-500 border border-primary/10 group">
                <!-- Gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-br from-secondary/[0.02] to-accent/[0.02] rounded-2xl"></div>
                
                <!-- Step number -->
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-secondary to-accent rounded-xl flex items-center justify-center text-white font-bold text-lg shadow-lg transform group-hover:scale-110 transition-transform">
                  2
                </div>

                <!-- Icon -->
                <div class="mb-6 transform group-hover:scale-110 transition-transform">
                  <div class="w-16 h-16 bg-gradient-to-br from-secondary/10 to-accent/10 rounded-xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                  </div>
                </div>

                <!-- Content -->
                <h3 class="text-title-2 font-heading mb-4 group-hover:text-secondary transition-colors">
                  Receive Quote
                </h3>
                <p class="text-body-large text-gray-600">
                  Get your quote within 24 hours
                </p>
              </div>
            </div>

            {/* Step 3: Receive Document */}
            <div class="workflow-item">
              <div class="relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-500 border border-primary/10 group">
                <!-- Gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-br from-accent/[0.02] to-accent-2/[0.02] rounded-2xl"></div>
                
                <!-- Step number -->
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-br from-accent to-accent-2 rounded-xl flex items-center justify-center text-white font-bold text-lg shadow-lg transform group-hover:scale-110 transition-transform">
                  3
                </div>

                <!-- Icon -->
                <div class="mb-6 transform group-hover:scale-110 transition-transform">
                  <div class="w-16 h-16 bg-gradient-to-br from-accent/10 to-accent-2/10 rounded-xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                </div>

                <!-- Content -->
                <h3 class="text-title-2 font-heading mb-4 group-hover:text-accent transition-colors">
                  Get Translation
                </h3>
                <p class="text-body-large text-gray-600">
                  Receive your certified translation
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Services Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-xl border border-primary/10 hover:shadow-2xl transition-all">
          <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl mb-6 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">{t['services.legal']}</h3>
          <p class="text-gray-600">Contracts, court documents, notarial deeds</p>
        </div>
        <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-xl border border-primary/10 hover:shadow-2xl transition-all">
          <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl mb-6 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">{t['services.business']}</h3>
          <p class="text-gray-600">Company documents, commercial agreements, certificates</p>
        </div>
        <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-xl border border-primary/10 hover:shadow-2xl transition-all">
          <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl mb-6 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">{t['services.personal']}</h3>
          <p class="text-gray-600">Diplomas, certificates, personal documents</p>
        </div>
      </div>

      <!-- Quote Form -->
      <div id="quote">
        <QuoteForm
          client:load
          translations={{
            title: t['quote.title'],
            name: t['quote.name'],
            email: t['quote.email'],
            message: t['quote.message'],
            upload: t['quote.upload'],
            submit: t['quote.submit']
          }}
        />
      </div>
    </div>
  </div>
</Layout>