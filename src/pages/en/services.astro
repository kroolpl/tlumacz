---
import Layout from '../../layouts/Layout.astro';
import { ui } from '../../i18n/ui';

const t = ui['en'];
---

<Layout title="Translation Services" lang="en" description={t['services.description']}>
  <div class="relative overflow-hidden pt-24">
    {/* Background Elements */}
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-radial from-primary/5 via-transparent to-transparent"></div>
      <div class="absolute top-1/4 -left-1/4 w-96 h-96 bg-primary/10 rounded-full mix-blend-multiply filter blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 -right-1/4 w-96 h-96 bg-secondary/10 rounded-full mix-blend-multiply filter blur-3xl animate-float-delayed"></div>
    </div>

    {/* Header Section */}
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-4xl md:text-5xl font-playfair mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">
          {t['services.title']}
        </h1>
        <p class="text-xl text-gray-600">
          {t['services.desc']}
        </p>
      </div>

      {/* Services Grid */}
      <div class="grid lg:grid-cols-3 gap-8 mb-16">
        {/* Legal Documents */}
        <div class="bg-white/70 backdrop-blur-sm p-8 rounded-2xl shadow-lg border border-primary/10 hover:shadow-xl transition-all group">
          <div class="w-14 h-14 bg-gradient-to-br from-primary to-secondary rounded-xl mb-6 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4 group-hover:text-primary transition-colors">
            {t['services.legal']}
          </h3>
          <p class="text-gray-600 mb-6">
            {t['services.legal.desc']}
          </p>
          <ul class="space-y-3 text-gray-600 mb-8">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Court documents
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Legal agreements
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Notarial deeds
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Apostille documents
            </li>
          </ul>
          <a 
            href="#quote" 
            class="inline-flex items-center justify-center w-full px-4 py-2 bg-primary/10 text-primary rounded-full hover:bg-primary hover:text-white transition-all group-hover:shadow-lg"
          >
            {t['services.get_quote']}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        {/* Business Documents */}
        <div class="bg-white/70 backdrop-blur-sm p-8 rounded-2xl shadow-lg border border-primary/10 hover:shadow-xl transition-all group">
          <div class="w-14 h-14 bg-gradient-to-br from-primary to-secondary rounded-xl mb-6 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4 group-hover:text-primary transition-colors">
            {t['services.business']}
          </h3>
          <p class="text-gray-600 mb-6">
            {t['services.business.desc']}
          </p>
          <ul class="space-y-3 text-gray-600 mb-8">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Commercial agreements
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Company documentation
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Certificates
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Business correspondence
            </li>
          </ul>
          <a 
            href="#quote" 
            class="inline-flex items-center justify-center w-full px-4 py-2 bg-primary/10 text-primary rounded-full hover:bg-primary hover:text-white transition-all group-hover:shadow-lg"
          >
            {t['services.get_quote']}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        {/* Personal Documents */}
        <div class="bg-white/70 backdrop-blur-sm p-8 rounded-2xl shadow-lg border border-primary/10 hover:shadow-xl transition-all group">
          <div class="w-14 h-14 bg-gradient-to-br from-primary to-secondary rounded-xl mb-6 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4 group-hover:text-primary transition-colors">
            {t['services.personal']}
          </h3>
          <p class="text-gray-600 mb-6">
            {t['services.personal.desc']}
          </p>
          <ul class="space-y-3 text-gray-600 mb-8">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Diplomas and certificates
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Birth certificates
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Marriage certificates
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Personal documents
            </li>
          </ul>
          <a 
            href="#quote" 
            class="inline-flex items-center justify-center w-full px-4 py-2 bg-primary/10 text-primary rounded-full hover:bg-primary hover:text-white transition-all group-hover:shadow-lg"
          >
            {t['services.get_quote']}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      {/* Additional Features */}
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <div class="bg-white/70 backdrop-blur-sm p-6 rounded-xl shadow-lg border border-primary/10">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold">Fast Delivery</h3>
          </div>
          <p class="text-gray-600">Standard delivery time 2-3 business days, express option available</p>
        </div>

        <div class="bg-white/70 backdrop-blur-sm p-6 rounded-xl shadow-lg border border-primary/10">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="font-semibold">Quality Guarantee</h3>
          </div>
          <p class="text-gray-600">Translations performed by a certified sworn translator</p>
        </div>

        <div class="bg-white/70 backdrop-blur-sm p-6 rounded-xl shadow-lg border border-primary/10">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-semibold">Online Support</h3>
          </div>
          <p class="text-gray-600">Online consultations, quick email communication</p>
        </div>
      </div>
    </div>
  </div>
</Layout>